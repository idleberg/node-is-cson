{
  "name": "is-cson",
  "version": "4.0.0",
  "description": "Determines whether a string is valid CSON",
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:cjs": "tsup --config tsup.config.ts --format=cjs",
    "build:esm": "tsup --config tsup.config.ts --format=esm",
    "dev": "npm run start",
    "fix": "eslint --fix ./src",
    "lint:json": "eslint ./*.json --ignore-path .gitignore",
    "lint:ts": "eslint ./src --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "start": "npm run build:esm -- --watch",
    "test": "uvu -r tsm tests",
    "prepack": "npm run build",
    "prepare": "husky install"
  },
  "type": "module",
  "exports": {
    "import": "./dist/is-cson.js",
    "require": "./dist/is-cson.cjs"
  },
  "typings": "dist/is-cson.d.ts",
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/node-is-cson.git"
  },
  "keywords": [
    "cson",
    "coffeescript"
  ],
  "license": "MIT",
  "dependencies": {
    "cson-parser": "^4.0.5"
  },
  "devDependencies": {
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "eslint-plugin-json": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "npm-run-all2": "^6.1.1",
    "tslib": "^2.6.2",
    "tsm": "^2.3.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "uvu": "^0.5.6"
  },
  "lint-staged": {
    "*.(json|ts)": "eslint --cache --fix"
  }
}
